var answer_item = $('#<%= dom_id(@answer) %>');
<% if @answer.errors.any? %>
  answer_item.find('.edit-answer-form').prepend("<%= j render 'shared/error_messages', object: @answer %>");
<% else %>
  <% if remotipart_submitted? %>
    answer_item.replaceWith('<%= j "#{render(@answer)}" %>');
  <% else %>   
    answer_item.replaceWith('<%= j render @answer %>');
  <% end %>
<% end %>