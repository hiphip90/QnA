$('#error_explanation').remove();
<% if @answer.errors.any? %>
  $('#new_answer').prepend("<%= j render 'shared/error_messages', object: @answer %>");
<% else %>
  $('.answers').show();
  $('.answers-count').text("<%= pluralize(@question.answers.count, 'answer') %>");
  $('.answers-block').append('<%= j render(@answer) %>');
  $('#new_answer').find('#answer_body').val('');
  $('#new_answer').find('.fields').not(':first-child').remove();
<% end %>
